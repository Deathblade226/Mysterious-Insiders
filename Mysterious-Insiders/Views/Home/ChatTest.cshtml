@model List<UserMessage>

@{
    ViewData["Title"] = "ChatTest";
}

<div class="">

    <div id="window">

        @for (int i = 0; i < Model.Count; i++)
        {
            if (Model[i].Name == null || Model[i].Name == "") Model[i].Name = "User";
            <p>@Model[i].ToString()</p>
        }
    
    </div>

    <form method="post">
        <input type="text" name="msg" /> <br />
        <input type="text" value="@ViewBag.name" name="name" placeholder=@ViewBag.name />
        <input type="submit" value="Add Message" />
    </form>
</div>