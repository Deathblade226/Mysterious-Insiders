@model List<int>
@{
    ViewData["Title"] = "DiceRoll";
    string rolls = "";
}

<style>



</style>

<button onclick="document.getElementById('rollPopup').style.display = 'block'">See Rolls</button>
<div id="rollPopup">
    
@for(int i = 0; i < Model.Count(); i++) {

    if (i == Model.Count()-1) { rolls += $"{Model.ElementAt(i)} = {Model.Sum()}";
    } else { rolls += $"{Model.ElementAt(i)} + "; }

}


<h5>@rolls</h5>
</div>

