@model ModuleData

<head>
	<style>
		.ModuleData {
			position: absolute;
		}
	</style>
</head>

<div class="ModuleData" style="left: @(Model.X + "px"); top: @(Model.Y)px; width: @(Model.Width)px; height: @(Model.Height)px;">
	@if (Model.Data != null) { 
	<div style="left: @(Model.X + "px"); top: @(Model.Y)px; width: @(Model.Width)px; height: @(Model.Height)px; text-align:center;" >@Model.Data</div>
    } else { 
	<img style="position:absolute; width: @(Model.Width + "px"); height: @(Model.Height + "px");" src="@Model.BgImageUrl"/>
	}
</div>